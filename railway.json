{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "python311",
            "gcc"
          ]
        },
        "install": {
          "cmds": [
            "python -m venv /opt/venv",
            ". /opt/venv/bin/activate",
            "pip install -r requirements.txt"
          ]
        },
        "start": {
          "cmd": "python bot.py"
        }
      }
    }
  }
}