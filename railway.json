{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "gcc", "make", "libffi", "openssl"]
        },
        "install": {
          "cmds": [
            "python -m venv /opt/venv",
            "source /opt/venv/bin/activate",
            "pip install --no-cache-dir python-telegram-bot==20.0 gspread Flask google-auth python-dotenv",
            "pip install --no-cache-dir -r requirements.txt || echo 'requirements.txt не найден'"
          ]
        },
        "start": {
          "cmd": "cd /app && source /opt/venv/bin/activate && python bot.py"
        }
      }
    }
  }
}
